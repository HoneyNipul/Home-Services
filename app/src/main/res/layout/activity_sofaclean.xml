<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.batman.homeservices.sofaclean"
    android:background="@drawable/dd">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:alpha=".80"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sofaclean" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView23"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView24"
        android:layout_below="@+id/textView23"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView25"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_green_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/button3"
        android:layout_above="@+id/textView25"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/primary_text_light" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 Seater Rs. 1500"
        android:id="@+id/radio6"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/primary_text_light" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Seater Rs. 1400"
        android:id="@+id/radio7"
        android:layout_above="@+id/radio6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/primary_text_light" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Seater Rs. 1300"
        android:id="@+id/radio8"
        android:layout_above="@+id/radio7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/primary_text_light" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Seater Rs. 1200"
        android:id="@+id/radio9"
        android:layout_above="@+id/radio8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/primary_text_light" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Seater Rs. 1100"
        android:id="@+id/radio10"
        android:layout_above="@+id/radio9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/primary_text_light" />

</RelativeLayout>
